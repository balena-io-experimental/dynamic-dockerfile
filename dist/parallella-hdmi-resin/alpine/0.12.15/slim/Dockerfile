FROM resin/parallella-hdmi-resin-alpine:latest

ENV NODE_VERSION 0.12.15

# Install dependencies
RUN apk add --no-cache libgcc libstdc++ libuv

RUN buildDeps='curl' \
	&& set -x \
	&& apk add --no-cache $buildDeps \
	&& curl -SLO "http://resin-packages.s3.amazonaws.com/node/v0.12.15/node-v0.12.15-linux-UNSUPPORTED.tar.gz" \
	&& echo "" | sha256sum -c - \
	&& tar -xzf "node-v0.12.15-linux-UNSUPPORTED.tar.gz" -C /usr/local --strip-components=1 \
	&& rm "node-v0.12.15-linux-UNSUPPORTED.tar.gz" \
	&& apk del $buildDeps \
	&& npm config set unsafe-perm true -g --unsafe-perm \
	&& rm -rf /tmp/*

