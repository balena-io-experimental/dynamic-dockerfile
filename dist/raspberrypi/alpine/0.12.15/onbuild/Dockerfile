# Resin.io base image for Raspberry Pi v1 & ZERO, Alpine, node v0.12.15, variant: onbuild
FROM resin/raspberrypi-alpine-node:0.12.15

ENV NODE_VERSION 0.12.15

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

ONBUILD COPY package.json /usr/src/app/
ONBUILD RUN DEBIAN_FRONTEND=noninteractive JOBS=MAX npm install --unsafe-perm
ONBUILD COPY . /usr/src/app

CMD [ "npm", "start" ]